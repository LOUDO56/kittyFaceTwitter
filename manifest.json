{
    "manifest_version": 3,
    "name": "Kitty Face on Tweets",
    "version": "1.0.0",
    "description": "Adds an little the little \":3\" emoji in the end of all tweets!",
    "content_scripts": [
      {
        "js": [
          "script.js"
        ],
        "matches": [
          "https://x.com/*"
        ]
      }
    ],
    "icons": {
        "128": "images/icon-128.png",
        "48": "images/icon-48.png",
        "32": "images/icon-32.png",
        "16": "images/icon-16.png"
    }
  }
  